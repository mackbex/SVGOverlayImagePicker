<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SVGOverlayImagePicker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/beige_1</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/dark_green_1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/beige_1</item>
        <item name="android:textColorPrimary">@color/grey_800</item>
        <item name="android:textColorSecondary">@color/grey_600</item>
    </style>

    <style name="CompanySearch" parent="Theme.SVGOverlayImagePicker"/>

    <style name="Theme.SVGOverlayImagePicker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SVGOverlayImagePicker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.SVGOverlayImagePicker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="imageview_logo_rounded_corner">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Theme.SVGOverlayImagePicker.UnderLineView" parent="Theme.SVGOverlayImagePicker">
        <item name="android:background">@color/grey_200</item>
    </style>

    <style name="Review.Pros" parent="Theme.SVGOverlayImagePicker">
        <item name="android:textColor">@color/light_blue_500</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Review.Cons" parent="Theme.SVGOverlayImagePicker">
        <item name="android:textColor">@color/red_700</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Layout.BG" parent="Theme.SVGOverlayImagePicker">
        <item name="android:background">@color/beige_1</item>
    </style>
    <style name="Theme.Layout.Detail.Main" parent="Theme.SVGOverlayImagePicker">
        <item name="android:background">@color/white</item>
    </style>


    <style name="Toolbar.TitleText" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_green_1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TabLayout" parent="Theme.SVGOverlayImagePicker">
        <item name="tabSelectedTextColor">@color/dark_green_2</item>
        <item name="tabIndicatorColor">@color/dark_green_1</item>
        <item name="android:background">@color/beige_1</item>
    </style>

    <style name="TabLayout.TabItem" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CardView.Album.Desc" parent="Theme.SVGOverlayImagePicker">
        <item name="android:background">@color/light_green</item>
        <item name="android:textColor">@color/dark_green_2</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Button.Overlay" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:backgroundTint">@color/dark_green_1</item>
    </style>
</resources>