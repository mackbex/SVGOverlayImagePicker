<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SVGOverlayImagePicker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_800</item>
        <item name="colorPrimaryVariant">@color/grey_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_800</item>
        <item name="colorSecondaryVariant">@color/grey_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/beige_1</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey_600</item>
    </style>

    <style name="imageview_logo_rounded_corner">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Theme.SVGOverlayImagePicker.UnderLineView" parent="Theme.SVGOverlayImagePicker">
        <item name="android:background">@color/grey_800</item>
    </style>
    <style name="Theme.Layout.BG" parent="Theme.SVGOverlayImagePicker">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Theme.Layout.Detail.Main" parent="Theme.SVGOverlayImagePicker">
        <item name="android:background">@color/grey_800</item>
    </style>

</resources>